              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"invalid-email\",\n  \"password\": \"weak\",\n  \"full_name\": \"\",\n  \"gender\": \"x\",\n  \"mobile_no\": \"invalid\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
