{
  "info": {
    "name": "Company Registration API",
    "description": "API collection for Company Registration & Verification Module",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5001/api"
    },
    {
      "key": "authToken",
      "value": ""
    },
    {
      "key": "userId",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:5000/health",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["health"]
            }
          }
        },
        {
          "name": "Register User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('userId', response.data.user.id);",
                  "    pm.collectionVariables.set('authToken', response.data.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"Test123!\",\n  \"full_name\": \"John Doe\",\n  \"gender\": \"m\",\n  \"mobile_no\": \"+919876543212\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('authToken', response.data.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"demo@bluestock.com\",\n  \"password\": \"DemoPass123!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Verify Mobile OTP",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"user_id\": \"{{userId}}\",\n  \"otp\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/verify-mobile",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "verify-mobile"]
            }
          }
        },
        {
          "name": "Delete User Account",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/user",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "user"]
            }
          }
        }
      ]
    },
    {
      "name": "Company Management",
      "item": [
        {
          "name": "Register Company",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"company_name\": \"Bluestock Fintech Demo\",\n  \"address\": \"123 Business District, Tech Park\",\n  \"city\": \"Mumbai\",\n  \"state\": \"Maharashtra\",\n  \"country\": \"India\",\n  \"postal_code\": \"400001\",\n  \"website\": \"https://bluestock.in\",\n  \"industry\": \"Financial Technology\",\n  \"founded_date\": \"2020-01-15\",\n  \"description\": \"Leading fintech company providing innovative financial solutions\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/company/register",
              "host": ["{{baseUrl}}"],
              "path": ["company", "register"]
            }
          }
        },
        {
          "name": "Get Company Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/company/profile",
              "host": ["{{baseUrl}}"],
              "path": ["company", "profile"]
            }
          }
        },
        {
          "name": "Update Company Profile",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"company_name\": \"Bluestock Fintech Updated\",\n  \"description\": \"Updated description for the leading fintech company\",\n  \"website\": \"https://updated.bluestock.in\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/company/profile",
              "host": ["{{baseUrl}}"],
              "path": ["company", "profile"]
            }
          }
        },
        {
          "name": "Upload Logo (Base64)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"file\": \"data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAYAAAAfFcSJAAAADUlEQVR42mNk+M9QDwADhgGAWjR9awAAAABJRU5ErkJggg==\",\n  \"type\": \"logo\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/company/upload-media",
              "host": ["{{baseUrl}}"],
              "path": ["company", "upload-media"]
            }
          }
        },
        {
          "name": "Upload Logo (File)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": []
                },
                {
                  "key": "type",
                  "value": "logo",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/company/upload-file",
              "host": ["{{baseUrl}}"],
              "path": ["company", "upload-file"]
            }
          }
        },
        {
          "name": "Upload Banner (Base64)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"file\": \"data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAYAAAAfFcSJAAAADUlEQVR42mNk+M9QDwADhgGAWjR9awAAAABJRU5ErkJggg==\",\n  \"type\": \"banner\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/company/upload-media",
              "host": ["{{baseUrl}}"],
              "path": ["company", "upload-media"]
            }
          }
        },
        {
          "name": "Upload Banner (File)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": []
                },
                {
                  "key": "type",
                  "value": "banner",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/company/upload-file",
              "host": ["{{baseUrl}}"],
              "path": ["company", "upload-file"]
            }
          }
        },
        {
          "name": "Delete Company Profile",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/company/profile",
              "host": ["{{baseUrl}}"],
              "path": ["company", "profile"]
            }
          }
        },
        {
          "name": "Delete Media",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"public_id\": \"company_logos/sample_id\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/company/media",
              "host": ["{{baseUrl}}"],
              "path": ["company", "media"]
            }
          }
        }
      ]
    },
    {
      "name": "Error Testing",
      "item": [
        {
          "name": "Invalid Email Registration",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
